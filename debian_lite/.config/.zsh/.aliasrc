#!/bin/zsh
alias locate='locate -i'
alias up='sudo apt-get update; sudo apt-get dist-upgrade -y && sudo apt-get autoremove -y && sudo apt-get autoclean -y'
alias sv='sudoedit'
alias sve='sudo nvim'
alias al='nvim "$HOME"/.config/.zsh/.aliasrc'
alias zshrc='nvim "$HOME"/.config/.zsh/.zshrc'
alias funcrc='nvim "$HOME"/.config/.zsh/.functionsrc'
alias sshrc='nvim "$HOME"/.config/.zsh/.sshrc'
alias nano='nano -c'
alias shellcheck='shellcheck -x'

alias ls='ls -alh --color=always'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='diff --color=auto'
alias mv='mv -iv'
alias cp='cp -Rvi --preserve=timestamps'
alias mkdir='mkdir -pv'
alias less='less -R'
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
alias l='locate'

alias SS='sudo systemctl'
alias SSS='sudo systemctl status'
alias SU='systemctl --user'
alias sdb='sudo updatedb'
alias srb='sudo reboot'
alias ruefi='sudo systemctl reboot --firmware-setup'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias docker-compose='docker compose'
alias dc='cd "$HOME"/docker'
alias dcup='dc && docker-compose up -d'
alias dcdown='dc && docker-compose down'
alias dockp='dc && yes | docker image prune && yes | docker container prune && yes | docker system prune && yes | docker volume prune'
alias dcupdate='dc && docker-compose pull && docker-compose up -d --quiet-pull && dockp && sleep 1 && vpcon'
alias dcres='dc && docker-compose down && dcupdate'
