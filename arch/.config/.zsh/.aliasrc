#!/bin/zsh
alias locate='locate -i'
alias up=''
alias sv='sudoedit'
alias sve='sudo nvim'
alias al='nvim "$HOME"/.config/.zsh/.aliasrc'
alias zshrc='nvim "$HOME"/.config/.zsh/.zshrc'
alias funcrc='nvim "$HOME"/.config/.zsh/.functionsrc'
alias sshrc='nvim "$HOME"/.config/.zsh/.sshrc'
alias nano='nano -c'
alias shellcheck='shellcheck -x'

alias ls='eza -gAhl --group-directories-first --icons --git'
alias lss='eza -gAhl -rs size --group-directories-first --icons --git'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='diff --color=auto'
alias mv='mv -iv'
alias cp='cp -Rvi --preserve=timestamps'
alias mkdir='mkdir -pv'
alias less='less -R'
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
alias cat='bat --paging=never --theme=gruvbox-dark'
alias pn='pnpm'
alias px='pnpx'
alias rest='insomnium & disown'
alias rand='nvim $HOME/.local/random.txt'
alias todo='nvim $HOME/.local/todo'
alias eliquid='nvim /data/shhtuff/E-Liquid.txt'
alias l='locate'
alias kbres='usbreset 3842:260a'

alias SS='sudo systemctl'
alias SSS='sudo systemctl status'
alias SU='systemctl --user'
alias SP='sudo pacman'
alias ruseless='sudo pacman -Rsn $(pacman -Qdtq)'
alias prune='sudo paccache -ru && sudo paccache -rk2'
alias purge='sudo pacman -Rnsu'
alias pacdep='pacman -Sii'
alias sdb='sudo updatedb'
alias srb='sudo reboot'
alias ruefi='sudo systemctl reboot --firmware-setup'

alias cooler='sudo cp /lib/systemd/system/coolercontrold.service.bak /lib/systemd/system/coolercontrold.service '

alias yte='cd /data/.sla/.empty/temp/ex; yt-dlp --no-mtime --embed-subs --external-downloader aria2c --external-downloader-args "-c -j 5 -x 10 --summary-interval=0" $1'
alias yt='cd /data/Downloads; yt-dlp -f "bv*[height=1080]+ba" --no-mtime --embed-subs --external-downloader aria2c --external-downloader-args "-c -j 5 -x 10 --summary-interval=0" $1'
alias yta='cd /data/Downloads; yt-dlp --no-mtime --extract-audio --audio-format mp3 --external-downloader aria2c --external-downloader-args "-c -j 5 -x 10 --summary-interval=0" "$@"'

alias gds='lazygit -p "$HOME"/git/dots'

alias tojsx='for x in src/**/*.js; do mv "$x" "${x%.js}.jsx"; done && mv src/index.jsx src/index.js'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
