#!/bin/zsh
alias locate='locate -i'
alias up=''
alias v='lvim'
alias uv='lvim +LvimUpdate +PackerSync +LvimCacheReset'
alias sv='sudoedit'
alias sve='sudo lvim'
alias al='lvim "$HOME"/.config/.zsh/.aliasrc'
alias zshrc='lvim "$HOME"/.config/.zsh/.zshrc'
alias funcrc='lvim "$HOME"/.config/.zsh/.functionsrc'
alias sshrc='lvim "$HOME"/.config/.zsh/.sshrc'
alias nano='nano -c'
alias shellcheck='shellcheck -x'
alias nvset='sudo nvidia-settings --config="$HOME"/.config/nvidia/settings/.nvidia-settings-rc'
alias podc='pcd sync && pcd ls 1 | tail -n 2 ; pcd ls 2 | tail -n 2'

alias ls='ls -xsAhl --color=auto --group-directories-first'
alias ll='ls -Alh --color=auto --group-directories-first'
alias lx='ls -lXBh --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='diff --color=auto'
alias mv='mv -iv'
alias cp='cp -Rvi --preserve=timestamps'
alias mkdir='mkdir -pv'
alias less='less -R'
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts'
alias cat='bat --paging=never --theme=gruvbox-dark'
alias yarn='yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config"'

alias SS='sudo systemctl'
alias SSS='sudo systemctl status'
alias SU='systemctl --user'
alias SP='sudo pacman'
alias upmir='/usr/bin/rate-mirrors --protocol https --disable-comments  --max-jumps 3 arch | /usr/bin/sudo /usr/bin/tee /etc/pacman.d/mirrorlist'
alias ruseless='sudo pacman -Rsn $(pacman -Qdtq)'
alias prune='sudo paccache -ru && sudo paccache -rk2'
alias purge='sudo pacman -Rnsu'
alias pacdep='pacman -Sii'
alias sdb='sudo updatedb'
alias srb='$HOME/.local/bin/fixReboot'
alias ruefi='sudo systemctl reboot --firmware-setup'

alias rkde='kquitapp5 plasmashell && kstart5 plasmashell > /dev/null 2>&1 & disown'
alias fkde='cp "$HOME"/.local/bin/extra/tasks.svg "$HOME"/.local/share/plasma/desktoptheme/Aritim-Dark-Rounded-Blur/widgets/tasks.svg && rkde' 
alias kcache='rm "$HOME"/.config/Trolltech.conf && kbuildsycoca5 --noincremental'
alias rnet='/usr/bin/nmcli con up br0\ slave\ 1 && /usr/bin/nmcli con up br0'

alias yt='cd /data/.sla/.empty/ex; yt-dlp --no-mtime --external-downloader aria2c --external-downloader-args "-c -j 5 -x 10 --summary-interval=0" $1'
alias yta='cd /1tb/Downloads; yt-dlp --no-mtime --prefer-ffmpeg --extract-audio --audio-format mp3 --external-downloader aria2c --external-downloader-args "-c -j 5 -x 10 --summary-interval=0" "$@"'

alias valh='/usr/bin/rsync -a --delete "$HOME"/.config/unity3d/IronGate/Valheim /data/.bak/'

alias gd='/usr/bin/git --git-dir=$HOME/.local/bin/git/dotfiles --work-tree=$HOME'
alias gda='gd add -u && gd commit -m "..." && gd push'
alias gds='gd status'
alias gitup='cd "$HOME"/.local/bin/git/tkg/nvidia-all && git pull && cd "$HOME"/.local/bin/git/tkg/linux-tkg && git pull'

alias lconf='meld $HOME/.config/frogminer/linux-tkg.cfg $HOME/.local/bin/git/tkg/linux-tkg/customization.cfg'
alias nconf='meld $HOME/.config/frogminer/nvidia-all.cfg $HOME/.local/bin/git/tkg/nvidia-all/customization.cfg'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias wclass='xprop WM_CLASS'
alias myphone='scrcpy -s e43a8543'
