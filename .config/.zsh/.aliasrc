alias locate='locate -i'
alias up=''
alias v='lvim'
alias sv='sudoedit'
alias sve='sudo lvim'
alias al='lvim "$HOME"/.config/.zsh/.aliasrc'
alias zshrc='lvim "$HOME"/.config/.zsh/.zshrc'
alias funcrc='lvim "$HOME"/.config/.zsh/.functionsrc'
alias sshrc='lvim "$HOME"/.config/.zsh/.sshrc'
alias nano='nano -c'
alias nvidia-settings='sudo nvidia-settings --config="$HOME"/.config/nvidia/settings/.nvidia-settings-rc'

alias ls='ls -xsAhl --color=auto --group-directories-first'
alias ll='ls -Alh --color=auto --group-directories-first'
alias lx='ls -lXBh --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='diff --color=auto'
alias mv='mv -iv'
alias cp='cp -Rvi --preserve=timestamps'
alias mkdir='mkdir -pv'
alias less='less -R'
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts'
alias cat='bat --paging=never --theme=gruvbox-dark'
alias yarn='yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config"'

alias upmir='sudo reflector -l 50 -n 10 -c US -p http --ipv4 --sort rate --save /etc/pacman.d/mirrorlist && sudo sed -i -e '/gigenet/d' -e '/osbeck/d' /etc/pacman.d/mirrorlist'
alias SS='sudo systemctl'
alias SP='sudo pacman'
alias ruseless='sudo pacman -Rsn $(pacman -Qdtq)'
alias prune='sudo paccache -ru && sudo paccache -rk2'
alias purge='sudo pacman -Rnsu'
alias pacdep='pacman -Sii'
alias sdb='sudo updatedb'
alias srb='sudo reboot'
alias ruefi='sudo systemctl reboot --firmware-setup'

alias rkde='kquitapp5 plasmashell ; plasmashell > /dev/null 2>&1 & disown'
alias fkde='sudo cp "$HOME"/.local/bin/extra/tasks.svgz /usr/share/plasma/desktoptheme/default/widgets/tasks.svgz && sudo cp "$HOME"/.local/bin/extra/panel-background.svgz /usr/share/plasma/desktoptheme/default/widgets/panel-background.svgz && rkde'
alias kcache='rm "$HOME"/.config/Trolltech.conf && kbuildsycoca5 --noincremental'

alias ytdl='cd /1tb/ex; youtube-dl --no-mtime --external-downloader aria2c --external-downloader-args "-c -j 5 -x 10 --summary-interval=0" $1'
alias ytdla='cd /1tb/Downloads; youtube-dl --no-mtime --prefer-ffmpeg --extract-audio --audio-format mp3 --external-downloader aria2c --external-downloader-args "-c -j 5 -x 10 --summary-interval=0" "$@"'

alias headset='"$HOME"/.local/bin/git/headset/HeadsetControl/build/headsetcontrol -l 0'

alias valh='/usr/bin/rsync -a --delete "$HOME"/.config/unity3d/IronGate/Valheim /data/.bak/'

alias gd='/usr/bin/git --git-dir=$HOME/.local/bin/git/dotfiles --work-tree=$HOME'
alias gda='gd add -u && gd commit -m "..." && gd push'
alias gds='gd status'
alias gitup='cd "$HOME"/.local/bin/git/fake-home && git pull && cd "$HOME"/.local/share/lunarvim/lvim && git pull && cd "$HOME"/.local/bin/git/tkg/nvidia-all && git pull && cd "$HOME"/.local/bin/git/tkg/linux-tkg && git pull'

alias lconf='meld $HOME/.config/frogminer/linux-tkg.cfg $HOME/.local/bin/git/tkg/linux-tkg/customization.cfg'
alias nconf='meld $HOME/.config/frogminer/nvidia-all.cfg $HOME/.local/bin/git/tkg/nvidia-all/customization.cfg'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias wclass='xprop WM_CLASS'
alias myphone='scrcpy -s e43a8543'
