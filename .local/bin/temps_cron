#!/bin/bash

sensor_data=$(sensors)
cpu_temp=$(awk '/Tctl:/{gsub("+","");print $2}' <<<"$sensor_data")
gpu_temp=$(nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader)
nvme0=$(grep -oP 'SHPP41-2000GM.*?\+\K[0-9.]+' <<<"$sensor_data" | head -n 1)
nvme1=$(grep -oP 'Sabrent.*?\+\K[0-9.]+' <<<"$sensor_data" | head -n 1)
nvme2=$(grep -oP 'SN850X.*?\+\K[0-9.]+' <<<"$sensor_data" | head -n 1)
ssd=$(awk '/drivetemp-scsi-2-0/,/^$/' <<<"$sensor_data" | grep 'temp1' | awk '{print $2}' | tr -d '+')

logger -p 4 "CPU: ${cpu_temp%%.*}°C GPU: ${gpu_temp}°C Drives: ${nvme0%%.*}°C | ${nvme1%%.*}°C | ${nvme2%%.*}°C | ${ssd%%.*}°C"
