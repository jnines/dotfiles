#!/usr/bin/env sh

_image_path="/var/lib/libvirt/images/"
_format=".qcow2"
_image=$(virsh -c qemu:///system list --all | awk 'NR>2 {print $2}' | fzf)

if [ -n "$_image" ]; then
	virsh -c qemu:///system start "$_image" \
		&& virt-viewer -c qemu:///system --auto-resize=always "$_image" >/dev/null 2>&1 &
fi
